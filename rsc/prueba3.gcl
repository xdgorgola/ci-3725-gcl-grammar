|[
  declare
    min, max : int;
    A : array[0..2]
    if A[0] < A[1] /\ A[1] < A[2] -->
       min := A[0];
       max := A[2]
    [] A[0] < A[2] /\ A[2] < A[1] -->
       min := A[0];
       max := A[1]
    [] A[1] < A[0] /\ A[0] < A[2] -->
       min := A[1];
       max := A[2]
    [] A[1] < A[2] /\ A[2] < A[0] -->
       min := A[1];
       max := A[0]
    [] A[2] < A[0] /\ A[0] < A[1] -->
       min := A[2];
       max := A[1]
    [] A[2] < A[1] /\ A[1] < A[0] -->
       min := A[2];
       max := A[0]
    fi
    // Esto es un comentario. Debe ser ignorado.
]| 